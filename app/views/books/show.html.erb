<div class="container">
 <div class="row">
 <div class="col-md-3" style="background-color: ">
<%= render 'users/userinfo', user: @user, book: @book_new %>
 </div>

 <div class="col-md-8 offset-md-1">

 <h2>Book detail</h2>
 <td>
   <%= image_tag @book.user.get_profile_image(200, 200) %>
     <%= link_to user_path(@book.user_id) do %>
     <br>
     <%= @user.name %>
   <% end %>
 </td>
 <td>
     <%= link_to book_path(@book.id) do %>
     <%= @book.title %>
  <% end %>

 </td>

<td>
    <%= @book.body %>
</td>
  <% if @book.user == current_user %>
      <td><%= link_to "Edit", edit_book_path(@book.id) %></td>
  <% end %>
  <% if @book.user == current_user %>
      <td><%= link_to "Destroy", book_path(@book.id), method: :delete, "data-confirm" => "本当に削除しますか？" %></td>
  <% end %>
 </div>
 </div>
